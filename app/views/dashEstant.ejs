<!--Pagina de estanteria, ligada a la tabla estanteria-->

<html>
<%- include('partials/dashmenu.ejs'); %>
<body class="hold-transition skin-blue sidebar-mini">
<!-- Site wrapper -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
<%- include('partials/dashhead.ejs'); %>


    <div class="box">
      <div class="box-header with-border">
        <h3>Estanterías</h3>
        <h4 class="text-muted">Aquí están tus estanterías y los productos que contienen</h4>
        <a type="button" href="/administrador/crear-estanteria"><i class="fa fa-pencil-square-o btn btn-primary btn-lg"> Agregar Nueva Estantería</i></a>
      </div>
      <div>
        <table id="" class="table table-bordered table-striped">
          <thead>
          <tr>
            <th>ESTANTERIA</th>
            <th>NOMBRE</th>
            <th>ACCIONES</th>
          </tr>
          </thead>
          <tbody>
            <% estanteria.forEach((element)=>{ %>
                <td><%= element.id %></td>
                <td><%= element.nombre%></td>
                <td>
                  <a type="button" href="/modificar-estanteria"><i class="fa fa-edit btn btn-warning "> Modificar Estanteria</i></a>
                  <a type="button" href="/administrador/borrarEstanteria?id=<%= element.id %> "><i class="fa fa-trash btn btn-danger"> Borrar estanteria</i></a>
                </td>
              </tr>
              <% }); %>
          </tfoot>
        </table>
        
      </div>

    </div>
  <!-- /.content -->
  </div>


<%- include('partials/dashfooter.ejs'); %>
<script>
  function eliminarEstanteria(id) {
    Swal.fire({
      title: 'Estas seguro?',
      text: "No tiene reversa! ... " + id,
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Si, eliminalo!'
    }).then((result) => {
      if (result.isConfirmed) {
        window.location.href = 'DELETE FROM estanteria WHERE id = ?', id;
        Swal.fire(
          'Deleted!',
          'La estantería ha sido eliminada.',
          'success'
        )
      }
    })
  }
</script>
