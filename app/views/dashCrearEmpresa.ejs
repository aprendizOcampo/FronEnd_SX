<!-- Pagina de la empresa, tiene los datos de la empresa -->

<html>
<%- include('partials/dashmenu.ejs'); %>

  <body class="hold-transition skin-blue sidebar-mini">
    <!-- Site wrapper -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <%- include('partials/dashhead.ejs'); %>

        <div class="box">
          <div class="box-header with-border">
            <h3>Tu Empresa</h3>
            <h4 class="text-muted">Aquí puedes ver y modificar los datos de tu empresa</h4>
          </div>
          <div class="row">
          </div>
          <div class="row">
            <div class="col-md-4">
            </div>
            <div class="col-md-4">
              <div class="panel panel-default">
                <form action="/administrador/saveEmpresa" method="post">
                <!-- Datos del administrador -->
                <div class="panel-body">
                  <h3>Nombre de la empresa: </h3>
                  <td><input type="text" name="nombre" class="form-control"
                    placeholder="Escriba el nombre de su empresa"></td>
                  <p>NIT: </p>
                  <td><input type="text" name="NIT_empresa" class="form-control"
                    placeholder="Escriba el NIT de su empresa"></td>
                  <p>Dirección de la empresa: </p>
                  <td><input type="text" name="direccion_empresa" class="form-control"
                    placeholder="Escriba la dirección de su empresa"></td>
                  <div class="text-center">
                    <button type="submit"  class="btn btn-primary">Guardar</button>
                  </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- jQuery 3 -->
        <script src="v1/../bower_components/jquery/dist/jquery.min.js"></script>
        <!-- Bootstrap 3.3.7 -->
        <script src="v1/../bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
        <!-- SlimScroll -->
        <script src="v1/../bower_components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
        <!-- FastClick -->
        <script src="v1/../bower_components/fastclick/lib/fastclick.js"></script>
        <!-- AdminLTE App -->
        <script src="v1/../dist/js/adminlte.min.js"></script>
        <!-- AdminLTE for demo purposes -->
        <script src="v1/../dist/js/demo.js"></script>
    </div>
    <%- include('partials/dashfooter.ejs'); %>
      </script>
  </body>

</html>